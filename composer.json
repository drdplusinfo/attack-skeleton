{
  "name": "drd-plus/attack-skeleton",
  "license": "MIT",
  "type": "project",
  "description": "Configurator skeleton for those using weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "attack",
    "calculator",
    "skeleton"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "granam/strict-object": "dev-master",
    "drd-plus/tables": "dev-master",
    "drd-plus/fight-properties": "dev-master",
    "drd-plus/calculator-skeleton": "dev-master"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "dev-master",
    "phpgt/dom": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "cp ./vendor/drd-plus/calculator-skeleton/parts/calculator-skeleton/* ./parts/attack-skeleton/",
      "rm -fr ./images/generic/frontend-skeleton && rm -fr ./images/generic/calculator-skeleton && cp -r ./vendor/drd-plus/calculator-skeleton/images/generic/ ./images/",
      "rm -fr ./css/generic/frontend-skeleton && rm -fr ./css/generic/calculator-skeleton && cp -r ./vendor/drd-plus/calculator-skeleton/css/generic/ ./css/",
      "rm -fr ./js/generic/frontend-skeleton && rm -fr ./js/generic/calculator-skeleton && cp -r ./vendor/drd-plus/calculator-skeleton/js/generic/ ./js/",
      "find ./vendor/drd-plus/calculator-skeleton/web/*.html -exec cp {} ./web/ \\;",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --dir=css"
    ]
  }
}
